<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detail_Film">

    <!--    logo xxi -->
    <LinearLayout
        android:id="@+id/llXXI"
        android:layout_width="412dp"
        android:layout_height="86dp"
        android:background="@color/darkGreen"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="37dp"
                android:layout_height="39dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="23dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/backwhite" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="103dp"
                android:layout_marginEnd="156dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnBack"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/xxi" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

<!-- <ScrollView-->
<!--     android:layout_width="match_parent"-->
<!--     android:layout_height="wrap_content">-->


     <!-- Genre -->
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/header">


         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">


             <TextView
                 android:id="@+id/hsJudulFilm"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="20dp"
                 android:layout_marginTop="16dp"
                 android:layout_marginEnd="20dp"
                 android:text="MIDNIGHT SHOW"
                 android:textAlignment="textStart"
                 android:textSize="20sp"
                 android:textStyle="bold"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent" />

             <TextView
                 android:id="@+id/hsGenre"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="20dp"
                 android:layout_marginTop="5dp"
                 android:layout_marginEnd="20dp"
                 android:layout_marginBottom="10dp"
                 android:text="Horor, Thriller"
                 android:textAlignment="textStart"
                 android:textColor="@color/grey"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/hsJudulFilm" />


         </androidx.constraintlayout.widget.ConstraintLayout>
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/Film">

         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <ImageView
                 android:id="@+id/hsPoster"
                 android:layout_width="143dp"
                 android:layout_height="209dp"
                 android:layout_marginStart="33dp"
                 android:layout_marginTop="16dp"
                 android:layout_marginBottom="10dp"
                 android:src="@drawable/poster1"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent" />

             <ImageView
                 android:id="@+id/imageView6"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:layout_marginStart="13dp"
                 android:layout_marginTop="16dp"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:srcCompat="@drawable/duration" />

             <TextView
                 android:id="@+id/hsDuration"
                 android:layout_width="0dp"
                 android:layout_height="19dp"
                 android:layout_marginStart="10dp"
                 android:layout_marginTop="16dp"
                 android:layout_marginEnd="30dp"
                 android:text="158 Minutes"
                 android:textColor="#015351"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toEndOf="@+id/imageView6"
                 app:layout_constraintTop_toTopOf="parent" />

             <ImageView
                 android:id="@+id/imageView7"
                 android:layout_width="32dp"
                 android:layout_height="32dp"
                 android:layout_marginStart="13dp"
                 android:layout_marginTop="6dp"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/imageView6"
                 app:srcCompat="@drawable/square"></ImageView>

             <TextView
                 android:layout_width="21dp"
                 android:layout_height="21dp"
                 android:layout_marginStart="15dp"
                 android:layout_marginTop="12dp"
                 android:text="2D"
                 android:textColor="#015351"
                 android:textSize="15sp"
                 android:textStyle="bold"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toBottomOf="@+id/imageView6" />

             <Button
                 android:id="@+id/btnBuyTiket"
                 android:layout_width="0dp"
                 android:layout_height="40dp"
                 android:layout_marginStart="18dp"
                 android:layout_marginTop="65dp"
                 android:layout_marginEnd="32dp"
                 android:backgroundTint="#015351"
                 android:text="BUY TIKET"
                 android:textStyle="bold"
                 app:cornerRadius="5sp"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toEndOf="@+id/hsPoster"
                 app:layout_constraintTop_toBottomOf="@+id/imageView7" />

             <Button
                 android:id="@+id/btnTrailer"
                 android:layout_width="0dp"
                 android:layout_height="40dp"
                 android:layout_marginStart="18dp"
                 android:layout_marginTop="5dp"
                 android:layout_marginEnd="32dp"
                 android:backgroundTint="#015351"
                 android:text="TRAILER"
                 android:textStyle="bold"
                 app:cornerRadius="5sp"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toEndOf="@+id/hsPoster"
                 app:layout_constraintTop_toBottomOf="@+id/btnBuyTiket" />


         </androidx.constraintlayout.widget.ConstraintLayout>
     </LinearLayout>


    <TextView
        android:id="@+id/hsSynopsis"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="33dp"
        android:text="Mendapatkan tawaran menjadi bintang nasional,
membawa grup Srimulat berhadapan dengan
kerasnya ibukota dan kendala bahasa. Saat ber..." />


    <TextView
         android:paddingLeft="33dp"
         android:layout_width="348dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:text="Producer:"
         android:textStyle="bold"/>

     <TextView
         android:paddingLeft="33dp"
         android:layout_width="348dp"
         android:layout_height="wrap_content"
         android:text="Susanti Dewi, Emilka Chaidir"
         android:id="@+id/hsProducer"/>

     <TextView
         android:paddingLeft="33dp"
         android:layout_width="348dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:text="Director:"
         android:textStyle="bold"/>

     <TextView
         android:paddingLeft="33dp"
         android:layout_width="348dp"
         android:layout_height="wrap_content"
         android:text="Fajar Nugros"
         android:id="@+id/hsDirector"/>

     <TextView
         android:paddingLeft="33dp"
         android:layout_width="348dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:text="Writer:"
         android:textStyle="bold"/>

     <TextView
         android:paddingLeft="33dp"
         android:layout_width="348dp"
         android:layout_height="wrap_content"
         android:text="Fajar Nugros"
         android:id="@+id/hsWriter"/>


     <TextView
         android:paddingLeft="33dp"
         android:layout_width="348dp"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:text="Cast:"
         android:textStyle="bold"/>

     <TextView
         android:paddingLeft="33dp"
         android:layout_width="348dp"
         android:layout_height="wrap_content"
         android:text="Juan Bio One, Elang EL Gibran, Ibnu Jamil, Dimas
Anggara, Teuku Rifnu Wikana, Erick Estrada,
7olfa Msharani Manen Ma Mimme Alii.fri"
         android:id="@+id/hsCast"/>

<!-- </ScrollView>-->


</LinearLayout>


















